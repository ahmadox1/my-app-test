<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gaming_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مساعد الألعاب الذكي"
            android:textColor="@color/gaming_blue"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple_700"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حالة الخدمة"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الخدمة متوقفة"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/detected_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_not_detected"
            android:textColor="@color/gaming_orange"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_start_service"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/start_service"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/gaming_green"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_stop_service"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/stop_service"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/gaming_red"
            android:layout_marginBottom="12dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/settings"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/gaming_blue"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_download_models"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="تحميل نماذج الذكاء الاصطناعي"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/gaming_orange" />

    </LinearLayout>

    <!-- Download Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple_700"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تحميل النماذج"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جاهز للتحميل - اضغط الزر أعلاه لتحميل النماذج"
            android:textColor="@color/teal_200"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Suggestions Section -->
    <LinearLayout
        android:id="@+id/suggestions_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/gaming_blue"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اقتراحات ذكية"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/suggestion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="لا توجد اقتراحات حالياً" />

    </LinearLayout>

</LinearLayout>